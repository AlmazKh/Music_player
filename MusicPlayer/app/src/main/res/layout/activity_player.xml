<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.example.almaz.musicplayer.Player">

    <ImageView
        android:id="@+id/iv_music"
        android:layout_width="352dp"
        android:layout_height="264dp"
        app:srcCompat="@drawable/img"/>

    <TextView
        android:id="@+id/tv_track_name"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="track name"
        android:textAlignment="center"
        android:textSize="24sp" />
    <SeekBar
        android:id="@+id/seekBar_position"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_weight="1"
            android:text="0:15" />

        <TextView
            android:id="@+id/tv_remaining_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="240dp"
            android:layout_weight="1"
            android:text="-1:15" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_previous"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/previous"
            tools:ignore="ButtonStyle" />
        <!--android:onClick="btnPreviousOnClick"-->
        <Button
            android:id="@+id/btn_play"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/play"
            android:onClick="OnClick"
            tools:ignore="ButtonStyle,OnClick" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="40dp"
            android:background="@drawable/next"
            tools:ignore="ButtonStyle" />
        <!--android:onClick="btnNextOnClick"-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_sound_inactive"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/sound_inactive" />

        <SeekBar
            android:id="@+id/seekBar_volume"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50" />

        <ImageView
            android:id="@+id/iv_sound_active"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/sound_active" />
    </LinearLayout>
</LinearLayout>
